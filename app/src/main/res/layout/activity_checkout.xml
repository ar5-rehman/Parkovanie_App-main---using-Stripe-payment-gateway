<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:stripe="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_checkout"
        android:background="@drawable/ic_background_parking_app"
        tools:context=".credit.CheckoutActivity">


    <com.stripe.android.view.CardInputWidget
            android:id="@+id/cardInputWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:theme="@style/textRegular"
            stripe:cardTint="@android:color/holo_purple"
            stripe:cardTextErrorColor="@android:color/holo_red_dark"
        />

    <Button
            android:text="Buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/payButton"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/cardInputWidget"
            android:background="@drawable/color_actionbutton"
            android:layout_centerHorizontal="true"/>

</RelativeLayout>
